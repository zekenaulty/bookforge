{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "State Patch",
  "type": "object",
  "required": [
    "schema_version"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0"
    },
    "world_updates": {
      "type": "object"
    },
    "thread_updates": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object"
          },
          {
            "type": "string"
          }
        ]
      }
    },
    "canon_updates": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "cursor_advance": {
      "type": "object",
      "properties": {
        "chapter": {
          "type": "integer",
          "minimum": 0
        },
        "scene": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "duplication_warnings_in_row_delta": {
      "type": "integer"
    },
    "world": {
      "type": "object"
    },
    "summary_update": {
      "type": "object",
      "properties": {
        "last_scene": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "key_events": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "must_stay_true": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "chapter_so_far_add": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "story_so_far_add": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "threads_touched": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "character_updates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "character_id": {
            "type": "string"
          },
          "chapter": {
            "type": "integer",
            "minimum": 0
          },
          "scene": {
            "type": "integer",
            "minimum": 0
          },
          "inventory": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "containers": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "persona_updates": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "invariants_add": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "required": [
          "character_id",
          "chapter",
          "scene"
        ],
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
