{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Outline Error v1",
  "type": "object",
  "required": [
    "result",
    "schema_version",
    "error_type",
    "reason_code",
    "missing_fields",
    "phase",
    "action_hint"
  ],
  "properties": {
    "result": {
      "const": "ERROR"
    },
    "schema_version": {
      "const": "error_v1"
    },
    "error_type": {
      "type": "string"
    },
    "reason_code": {
      "type": "string"
    },
    "missing_fields": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "phase": {
      "type": "string"
    },
    "action_hint": {
      "type": "string"
    },
    "validator_evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "scene_ref": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
