{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Item Registry",
  "type": "object",
  "required": ["schema_version", "items"],
  "properties": {
    "schema_version": {"const": "1.0"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "item_id",
          "name",
          "type",
          "owner_scope",
          "custodian",
          "linked_threads",
          "state_tags",
          "last_seen"
        ],
        "properties": {
          "item_id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "type": {"type": "string", "minLength": 1},
          "owner_scope": {"type": "string", "minLength": 1},
          "custodian": {
            "anyOf": [
              {"type": "string", "minLength": 1},
              {"type": "object"}
            ]
          },
          "linked_threads": {
            "type": "array",
            "items": {"type": "string"}
          },
          "state_tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "last_seen": {
            "type": "object",
            "required": ["chapter", "scene", "location"],
            "properties": {
              "chapter": {"type": "integer", "minimum": 0},
              "scene": {"type": "integer", "minimum": 0},
              "location": {"type": "string"}
            },
            "additionalProperties": true
          },
          "aliases": {
            "type": "array",
            "items": {"type": "string"}
          },
          "linked_device_id": {"type": "string"},
          "replacement_of": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
