{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Lint Report",
  "type": "object",
  "required": [
    "schema_version",
    "status",
    "issues"
  ],
  "properties": {
    "schema_version": {
      "const": "1.0"
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}