{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Scene Card",
  "type": "object",
  "required": [
    "schema_version",
    "scene_id",
    "chapter",
    "scene",
    "scene_target",
    "goal",
    "conflict",
    "required_callbacks",
    "constraints",
    "end_condition"
  ],
  "properties": {
    "schema_version": {
      "const": "1.1"
    },
    "scene_id": {
      "type": "string"
    },
    "chapter": {
      "type": "integer",
      "minimum": 0
    },
    "scene": {
      "type": "integer",
      "minimum": 0
    },
    "scene_target": {
      "type": "string"
    },
    "goal": {
      "type": "string"
    },
    "conflict": {
      "type": "string"
    },
    "required_callbacks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "end_condition": {
      "type": "string"
    },
    "cast_present": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cast_present_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduces_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "thread_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_in_custody": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_scene_accessible": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_visible_on_page": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "forbidden_visible": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "device_presence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "durable_appearance_changes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "character_id": {
            "type": "string"
          },
          "change_type": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": [
          "character_id",
          "change_type"
        ],
        "additionalProperties": true
      }
    },
    "transition_type": {
      "type": "string"
    },
    "timeline_scope": {
      "type": "string",
      "enum": [
        "present",
        "flashback",
        "dream",
        "simulation",
        "hypothetical"
      ]
    },
    "ontological_scope": {
      "type": "string",
      "enum": [
        "real",
        "non_real"
      ]
    }
  },
  "additionalProperties": true
}



