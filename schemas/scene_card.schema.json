{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Scene Card",
  "type": "object",
  "required": [
    "schema_version",
    "scene_id",
    "chapter",
    "scene",
    "scene_target",
    "goal",
    "conflict",
    "required_callbacks",
    "constraints",
    "end_condition"
  ],
  "properties": {
    "schema_version": {
      "const": "1.1"
    },
    "scene_id": {
      "type": "string"
    },
    "chapter": {
      "type": "integer",
      "minimum": 0
    },
    "scene": {
      "type": "integer",
      "minimum": 0
    },
    "scene_target": {
      "type": "string"
    },
    "goal": {
      "type": "string"
    },
    "conflict": {
      "type": "string"
    },
    "required_callbacks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "end_condition": {
      "type": "string"
    },
    "cast_present": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cast_present_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduces_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "thread_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}