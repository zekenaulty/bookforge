{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Scene Card",
  "type": "object",
  "required": [
    "schema_version",
    "scene_id",
    "chapter",
    "scene",
    "scene_target",
    "goal",
    "conflict",
    "required_callbacks",
    "constraints",
    "end_condition",
    "location_start_id",
    "location_end_id",
    "location_start",
    "location_end",
    "handoff_mode",
    "constraint_state",
    "transition_in_text",
    "transition_in_anchors",
    "seam_score",
    "seam_resolution"
  ],
  "properties": {
    "schema_version": {
      "const": "1.1"
    },
    "scene_id": {
      "type": "string"
    },
    "chapter": {
      "type": "integer",
      "minimum": 0
    },
    "scene": {
      "type": "integer",
      "minimum": 0
    },
    "scene_target": {
      "type": "string"
    },
    "goal": {
      "type": "string"
    },
    "conflict": {
      "type": "string"
    },
    "required_callbacks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "end_condition": {
      "type": "string"
    },
    "location_start_id": {
      "type": "string",
      "pattern": "^LOC_[A-Z0-9_]+$"
    },
    "location_end_id": {
      "type": "string",
      "pattern": "^LOC_[A-Z0-9_]+$"
    },
    "location_start": {
      "type": "string",
      "minLength": 1
    },
    "location_end": {
      "type": "string",
      "minLength": 1
    },
    "handoff_mode": {
      "type": "string"
    },
    "constraint_state": {
      "type": "string"
    },
    "transition_in_text": {
      "type": "string",
      "minLength": 1
    },
    "transition_in_anchors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "maxItems": 6
    },
    "transition_out": {
      "type": "string"
    },
    "consumes_outcome_from": {
      "type": "string"
    },
    "hands_off_to": {
      "type": "string"
    },
    "seam_score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "seam_resolution": {
      "type": "string",
      "enum": [
        "inline_bridge",
        "micro_scene",
        "full_scene"
      ]
    },
    "hard_cut_justification": {
      "type": "string"
    },
    "intentional_cinematic_cut": {
      "type": "boolean"
    },
    "cast_present": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cast_present_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "introduces_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "thread_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_in_custody": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_scene_accessible": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "required_visible_on_page": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "forbidden_visible": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "device_presence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "durable_appearance_changes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "character_id": {
            "type": "string"
          },
          "change_type": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": [
          "character_id",
          "change_type"
        ],
        "additionalProperties": true
      }
    },
    "transition_type": {
      "type": "string"
    },
    "timeline_scope": {
      "type": "string",
      "enum": [
        "present",
        "flashback",
        "dream",
        "simulation",
        "hypothetical"
      ]
    },
    "ontological_scope": {
      "type": "string",
      "enum": [
        "real",
        "non_real"
      ]
    },
    "ui_allowed": {
      "type": "boolean"
    },
    "ui_mechanics_expected": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}
